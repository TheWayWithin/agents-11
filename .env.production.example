# PRODUCTION ENVIRONMENT VARIABLES
# Copy this file to set up your production environment in Vercel
# DO NOT commit actual values to version control

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key_here

# Stripe Configuration (Live Mode)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret_here

# Stripe Price IDs (Live Mode - Create these in Stripe Dashboard)
STRIPE_STARTER_PRICE_ID=price_live_starter_monthly
STRIPE_PROFESSIONAL_PRICE_ID=price_live_professional_monthly
STRIPE_UNLIMITED_PRICE_ID=price_live_unlimited_monthly

# App Configuration (Production)
NEXT_PUBLIC_APP_URL=https://agents11.com
NEXTAUTH_SECRET=your_secure_production_nextauth_secret_min_32_chars
NEXTAUTH_URL=https://agents11.com

# Database URLs (Production)
DATABASE_URL=your_production_database_connection_string_here

# File Storage (Production S3/CDN)
AWS_ACCESS_KEY_ID=your_production_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=agents11-production-assets

# Email Service (Production)
RESEND_API_KEY=your_production_resend_api_key_here

# Monitoring & Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here
NEXT_PUBLIC_SENTRY_DSN=https://your-public-sentry-dsn@sentry.io/project-id

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
POSTHOG_KEY=phc_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Rate Limiting & Security
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Node Environment
NODE_ENV=production

# IMPORTANT NOTES:
# 1. All NEXT_PUBLIC_ variables are exposed to the browser
# 2. Keep sensitive keys (SECRET, PRIVATE) server-side only
# 3. Use different Stripe keys for test vs live mode
# 4. Update webhook endpoints in Stripe Dashboard for production
# 5. Configure CORS origins in Supabase for your production domain
# 6. Set up proper SSL certificates for custom domains
# 7. Configure DNS records for your domain
# 8. Test all integrations in staging before production deploy